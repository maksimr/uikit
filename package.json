{
  "name": "@maksimr/ui",
  "version": "0.0.36",
  "engines": {
    "node": ">= 14"
  },
  "main": "lib/index.js",
  "scripts": {
    "start": "webpack serve --mode development --history-api-fallback --host 0.0.0.0 --client-web-socket-url auto://0.0.0.0:0/ws",
    "build": "webpack --mode production",
    "build:pkg": "tsc --project tsconfig.build.json --declaration --outDir dist --noEmit false",
    "postbuild:pkg": "cp package.json dist/package.json",
    "preprelease": "npm run build:pkg",
    "release": "npm version patch -m 'bump: version to %s'",
    "postrelease": "git push && git push --tags",
    "test": "jest --passWithNoTests",
    "test:e2e": "karma start ./test/e2e/karma.config.js",
    "test:type": "tsc",
    "lint": "eslint lib/ src/ test/"
  },
  "dependencies": {},
  "devDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "typescript": "4.4.2",
    "@types/jest": "27.0.1",
    "@types/jasmine": "3.9.0",
    "@types/react-dom": "17.0.9",
    "@types/react": "17.0.20",
    "@babel/core": "7.15.5",
    "@babel/preset-env": "7.15.4",
    "@babel/preset-react": "7.14.5",
    "@babel/eslint-parser": "7.15.4",
    "babel-loader": "8.2.2",
    "css-loader": "6.2.0",
    "html-webpack-plugin": "5.3.2",
    "webpack": "5.52.0",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "4.1.1",
    "eslint": "7.32.0",
    "eslint-plugin-react": "7.25.1",
    "jest": "27.1.1",
    "@jest/globals": "27.1.1",
    "jest-cli": "27.1.1",
    "playwright": "1.14.1",
    "puppeteer": "10.2.0",
    "karma": "6.3.4",
    "karma-webpack": "5.0.0",
    "karma-jasmine": "4.0.1",
    "karma-image-snapshot": "0.0.6",
    "jest-image-snapshot": "4.5.1"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "jest": true,
      "jasmine": true,
      "describe": true,
      "it": true,
      "beforeEach": true,
      "beforeAll": true,
      "afterEach": true,
      "expect": true,
      "expectAsync": true
    },
    "rules": {
      "react/jsx-uses-vars": 2,
      "react/jsx-uses-react": 2,
      "no-undef": "error",
      "semi": "error",
      "no-unused-vars": "error"
    }
  }
}
