{
  "name": "@maksimr/ui",
  "version": "0.0.31",
  "scripts": {
    "start": "webpack-dev-server -d --disable-host-check --history-api-fallback --host 0.0.0.0 --public $SANDBOX_URL",
    "build": "webpack -p",
    "build:pkg": "tsc --project tsconfig.build.json --declaration --outDir dist --noEmit false",
    "postbuild:pkg": "cp package.json dist/package.json",
    "preprelease": "npm run build:pkg",
    "release": "npm version patch -m 'bump: version to %s'",
    "postrelease": "git push && git push --tags",
    "test": "jest --passWithNoTests",
    "test:e2e": "karma start ./test/e2e/karma.config.js",
    "test:type": "tsc",
    "lint": "eslint lib/ src/ test/"
  },
  "dependencies": {},
  "devDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "typescript": "4.3.5",
    "@types/jest": "27.0.1",
    "@types/jasmine": "3.8.2",
    "@types/react-dom": "17.0.9",
    "@types/react": "17.0.19",
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.15.0",
    "@babel/preset-react": "7.14.5",
    "@babel/eslint-parser": "7.15.0",
    "babel-loader": "8.2.2",
    "css-loader": "6.2.0",
    "html-webpack-plugin": "5.3.2",
    "webpack": "5.51.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "4.0.0",
    "eslint": "7.32.0",
    "eslint-plugin-react": "7.24.0",
    "jest": "27.0.6",
    "@jest/globals": "27.0.6",
    "jest-cli": "27.0.6",
    "karma": "6.3.4",
    "karma-chrome-launcher": "3.1.0",
    "karma-webpack": "5.0.0",
    "karma-jasmine": "4.0.1",
    "puppeteer": "10.2.0",
    "jest-image-snapshot": "4.5.1"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "jest": true,
      "jasmine": true,
      "describe": true,
      "it": true,
      "beforeEach": true,
      "beforeAll": true,
      "afterEach": true,
      "expect": true,
      "expectAsync": true
    },
    "rules": {
      "react/jsx-uses-vars": 2,
      "react/jsx-uses-react": 2,
      "no-undef": "error",
      "semi": "error",
      "no-unused-vars": "error"
    }
  }
}
